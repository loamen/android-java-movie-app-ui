<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/container_padding_size"
    >
    <TextView
        android:id="@+id/edit_user_title"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/container_padding_size"
        android:layout_height="@dimen/md_btn_height"/>
    <EditText
        android:id="@+id/edit_user_input"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/container_padding_size"
        android:background="@drawable/edit_input_decoration"
        android:layout_height="@dimen/md_btn_height"/>
</LinearLayout>