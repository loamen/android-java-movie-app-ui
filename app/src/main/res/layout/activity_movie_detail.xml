<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray"
    tools:context=".activity.MovieDetailActivity">
    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/border_radius"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_height="200dp"
                    android:layout_width="150dp"
                    android:onClick="goPlay"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_corner_radius="10dp"
                        app:riv_oval="false"
                        android:id="@+id/movie_detail_img"/>
                    <ImageView
                        android:id="@+id/movie_play"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@mipmap/icon_detail_play"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/main_font_color"
                        android:id="@+id/movie_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/navigate"
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/navigate"
                        android:id="@+id/movie_detail_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/score_layout"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_empty_star"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/icon_empty_star"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/icon_empty_star"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/icon_empty_star"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/icon_empty_star"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/score"
                            android:textColor="#ff0000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/no_score"
                        android:visibility="gone"
                        android:textColor="@color/navigate"
                        android:text="暂无评分"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_collection"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:src="@mipmap/icon_comment"
                            android:layout_marginLeft="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/background_blue"
                        android:layout_width="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="剧情"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/plot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/star_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/background_blue"
                        android:layout_width="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="主演"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/star_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yourlikes_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/background_blue"
                        android:layout_width="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="猜你想看"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/yourlikes_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/background_blue"
                        android:layout_width="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="推荐"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommend_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>