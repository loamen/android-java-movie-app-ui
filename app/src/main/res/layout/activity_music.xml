<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color"
    tools:context=".music.activity.MusicActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/music_viewpager"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/top_border_stroke_white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/home"
            >
            <ImageView
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:id="@+id/music_home_img"
                android:src="@mipmap/icon_home_active"/>
            <TextView
                android:id="@+id/music_home_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate_active"
                android:text="@string/home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/music_recommend"
            >
            <ImageView
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:id="@+id/music_recommend_img"
                android:src="@mipmap/icon_movie"/>
            <TextView
                android:id="@+id/music_recommend_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate"
                android:text="@string/movie"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/music_circle"
            >
            <ImageView
                android:id="@+id/music_circle_img"
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:src="@mipmap/icon_tv"/>
            <TextView
                android:id="@+id/music_circle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_margin_size"
                android:textColor="@color/navigate"
                android:text="@string/tv"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/music_my"
            >
            <ImageView
                android:id="@+id/music_my_img"
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:src="@mipmap/icon_user"/>
            <TextView
                android:id="@+id/music_my_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate"
                android:text="@string/user"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>