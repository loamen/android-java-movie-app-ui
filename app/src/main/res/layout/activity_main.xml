<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_background_color"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewpager"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/top_border_stroke_white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/home"
            >
            <ImageView
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:id="@+id/home_img"
                android:src="@mipmap/icon_home_active"/>
            <TextView
                android:id="@+id/home_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate_active"
                android:text="@string/home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/movie"
            >
            <ImageView
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:id="@+id/movie_img"
                android:src="@mipmap/icon_movie"/>
            <TextView
                android:id="@+id/movie_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate"
                android:text="@string/movie"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/tv"
            >
            <ImageView
                android:id="@+id/tv_img"
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:src="@mipmap/icon_tv"/>
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_margin_size"
                android:textColor="@color/navigate"
                android:text="@string/tv"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin_size"
            android:paddingBottom="@dimen/small_margin_size"
            android:id="@+id/user_center"
            >
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="@dimen/lg_img_size"
                android:layout_height="@dimen/lg_img_size"
                android:src="@mipmap/icon_user"/>
            <TextView
                android:id="@+id/user_text"
                android:paddingTop="@dimen/small_margin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigate"
                android:text="@string/user"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>